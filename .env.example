# FamilyBridge Environment Configuration
# Copy this file to .env and update with your actual values

# App Configuration
APP_NAME=FamilyBridge
APP_VERSION=1.0.0
DEBUG_MODE=true
LOG_LEVEL=debug

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Third-party Services

# Weather API (Optional)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Push Notifications
FCM_SERVER_KEY=your_firebase_server_key
FCM_SENDER_ID=your_firebase_sender_id

# Media Storage
STORAGE_BUCKET=your_storage_bucket_name
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mp3,wav

# Email Services (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Services (Optional - for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Social Media Integration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# Analytics (Optional)
ANALYTICS_ENABLED=true
FIREBASE_PROJECT_ID=your_firebase_project_id
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Error Reporting
CRASHLYTICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_VOICE_MESSAGES=true
ENABLE_VIDEO_CALLS=false
ENABLE_LOCATION_SHARING=true
ENABLE_HEALTH_TRACKING=true
ENABLE_MEDICATION_REMINDERS=true
ENABLE_EMERGENCY_ALERTS=true

# Performance & Monitoring
PERFORMANCE_MONITORING=true
LOG_REQUESTS=true
LOG_RESPONSES=false
MAX_LOG_SIZE=50MB

# Cache Configuration
CACHE_DURATION=300
CACHE_MAX_SIZE=100MB
OFFLINE_MODE_ENABLED=true

# Security
ENCRYPTION_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true
SESSION_TIMEOUT=3600

# Development/Testing
MOCK_SERVICES=false
ENABLE_FLUTTER_DRIVER=false
TEST_USER_EMAIL=test@familybridge.app
TEST_USER_PASSWORD=test123456

# Backup & Recovery
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Compliance
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
DATA_RETENTION_DAYS=365